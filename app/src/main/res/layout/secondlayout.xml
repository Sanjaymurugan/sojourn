<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8DEBD"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailooty"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:padding="20dp"/>
    <ImageView
        android:id="@+id/showplacesooty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailooty" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:id="@+id/descriptionplacesooty"
        android:layout_marginTop="10dp"
        android:layout_below="@id/showplacesooty"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/distancedurationmap"
        android:layout_marginLeft="5dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/descriptionplacesooty"/>
    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:id="@+id/durationmap"
        android:layout_below="@+id/descriptionplacesooty"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textAlignment="textEnd"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="18dp"
        android:gravity="end"/>
</RelativeLayout>